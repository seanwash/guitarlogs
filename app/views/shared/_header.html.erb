<header class="navigation" role="banner">
	<div class="wrapper">

		<%= link_to 'Guitar Logs', root_path, class: 'logo' %>

		<nav role="navigation">
			<ul id="js-navigation-menu" class="navigation-menu show">
				<li class="nav-link"><%= link_to 'Journal', entries_path %></li>
				<li class="nav-link"><a href="#">Exercises</a></li>
			</ul>
		</nav>

		<div class="navigation-tools">
